<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign In</title>
  <link rel="stylesheet" href="styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <style>
    /* Resetting margin and padding */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* Setting the body font and background */
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f7fc;
    }

    /* Container for the landing page */
    .landing-page {
      display: flex;
      height: 100vh;
    }

    /* Left Section: Image */
    .left-section {
      width: 50%;
      background: url('../public/images/signup.png') no-repeat center center;
      background-size: cover;
    }

    /* Right Section: Form */
    .right-section {
      width: 50%;
      background-color: #fff;
      padding: 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .right-section h1 {
      font-size: 32px;
      margin-bottom: 20px;
      color: #333;
      text-align: center;
    }

    .right-section p {
      font-size: 18px;
      margin-bottom: 30px;
      color: #666;
      text-align: center;
    }

    /* Form Inputs */
    .right-section input {
      width: 100%;
      padding: 12px;
      margin: 10px 0;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 16px;
      box-sizing: border-box; /* Ensures padding doesn't affect the width */
    }

    /* Form Submit Button */
    .right-section button {
      width: 100%;
      padding: 12px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      font-size: 18px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .right-section button:hover {
      background-color: #0056b3;
    }

    /* Media Query for mobile devices */
    @media only screen and (max-width: 768px) {
      .landing-page {
        flex-direction: column;
      }

      .left-section, .right-section {
        width: 100%;
      }

      .right-section h1 {
        font-size: 28px;
      }

      .right-section p {
        font-size: 16px;
      }

      .right-section input, .right-section button {
        width: 90%;
      }

      .right-section {
        padding: 20px;
      }
    }


    @media only screen and (max-width: 768px) {
    .landing-page {
      flex-direction: column;
    }

    .left-section, .right-section {
      width: 100%;
    }

    .right-section h1 {
      font-size: 28px;
    }

    .right-section p {
      font-size: 16px;
    }

    .right-section input, .right-section button {
      width: 90%;
    }

    .right-section {
      padding: 20px;
      margin-top: 5rem;
    }
  }

  </style>
</head>
<body>
  <div class="landing-page">
    <!-- Left Section (Image) -->
    <div class="left-section">
      <!-- Placeholder Image (replace 'your-image.jpg' with the path of your image) -->
      <img src="/images/signup.jpg" alt="Landing Image" style="width: 100%; height: 100%; object-fit: cover;">
    </div>

    <!-- Right Section (Form) -->
    <div class="right-section">
      <h1>Welcome to Our Website</h1>
      <p>Sign in with user or email</p>
      <form action="/login" method="POST" class="signup-form"/>
        <input type="text" name="identifier" placeholder="Email or username" id="identifier" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit" id="loginButton">login</button>  
        <div id="error" style="display: none; color: red;"></div>
      </form>
      <p>you want to signin </p><a href="/signup">Signup</a>
    </div>
  </div>
        

  <script>
    document.getElementById('loginButton').addEventListener('click', async () => {
  const identifier = document.getElementById('identifier').value; // This is either email or username
  const password = document.getElementById('password').value;

  // Check for empty input fields
  if (!identifier || !password) {
    document.getElementById('error').style.display = 'block';
    document.getElementById('error').innerText = 'All fields are required.';
    return;
  }

  try {
    const response = await axios.post(
      '/login',
      { identifier, password },  // Correct data being sent
      { withCredentials: true }
    );

    // Redirect to the dashboard upon success
    window.location.href = '/todo';
  } catch (error) {
    let errorMessage = 'An error occurred.';

    if (error.response) {
      errorMessage = error.response?.data?.error || errorMessage;
    } else if (error.request) {
      errorMessage = 'Server did not respond. Please try again later.';
    } else {
      errorMessage = error.message || errorMessage;
    }

    // Display the error message
    document.getElementById('error').style.display = 'block';
    document.getElementById('error').innerText = errorMessage;
  }
});
    </script>


</body>
</html>
