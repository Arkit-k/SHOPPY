<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="sign-in.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
      /* Resetting margin and padding */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
  
      /* Setting the body font and background */
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fc;
      }
  
      /* Container for the landing page */
      .landing-page {
        display: flex;
        height: 100vh;
      }
  
      /* Left Section: Image */
      .left-section {
        width: 50%;
        background: url('../public/images/sign-in.png') no-repeat center center;
        background-size: cover;
      }
  
      /* Right Section: Form */
      .right-section {
        width: 50%;
        background-color: #fff;
        padding: 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }
  
      .right-section h1 {
        font-size: 32px;
        margin-bottom: 20px;
        color: #333;
        text-align: center;
      }
  
      .right-section p {
        font-size: 18px;
        margin-bottom: 30px;
        color: #666;
        text-align: center;
      }
  
      /* Form Inputs */
      .right-section input {
        width: 100%;
        padding: 12px;
        margin: 10px 0;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 16px;
        box-sizing: border-box; /* Ensures padding doesn't affect the width */
      }
  
      /* Form Submit Button */
      .right-section button {
        width: 100%;
        padding: 12px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s;
      }
  
      .right-section button:hover {
        background-color: #0056b3;
      }
  
      /* Media Query for mobile devices */
      @media only screen and (max-width: 768px) {
        .landing-page {
          flex-direction: column;
        }
  
        .left-section, .right-section {
          width: 100%;
        }
  
        .right-section h1 {
          font-size: 28px;
        }
  
        .right-section p {
          font-size: 16px;
        }
  
        .right-section input, .right-section button {
          width: 90%;
        }
  
        .right-section {
          padding: 20px;
        }
      }
  

      @media only screen and (max-width: 768px) {
      .landing-page {
        flex-direction: column;
      }

      .left-section, .right-section {
        width: 100%;
      }

      .right-section h1 {
        font-size: 28px;
      }

      .right-section p {
        font-size: 16px;
      }

      .right-section input, .right-section button {
        width: 90%;
      }

      .right-section {
        padding: 20px;
        margin-top: 5rem;
      }
    }

    </style>
</head>
<body>
      <div class="landing-page">
            <!-- Left Section (Image) -->
            <div class="left-section">
              <!-- Placeholder Image (replace 'your-image.jpg' with the path of your image) -->
              <img src="/images/sign-in.png" alt="Landing Image" style="width: 100%; height: 100%; object-fit: cover;">
            </div>
        
            <!-- Right Section (Form) -->
            <div class="right-section">
              <h1>Welcome to Our Website</h1>
              <p>Sign up to get started</p>
              <form action="/signup" method="POST" class="signup-form"/>
                <input type="text" name="username" placeholder="Username" required>
                <input type="email" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Password" required>
                <button type="submit">Sign Up</button>
              </form>
              <p>you want to signin <a href="/login">Sign In</a> </p>
            </div>
          </div>

    <script>
        // Intercept the form submit
        document.getElementById('signupForm').addEventListener('submit', function(event) {
            event.preventDefault();  // Prevent the default form submission

            const username = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            // Make the POST request using Axios
            axios.post('/signup', {
                username: username,
                email: email,
                password: password
            })
            .then(function(response) {
                // Handle successful signup
                alert('Account created successfully!');
                // Redirect to login or dashboard
                window.location.href = '/login';
            })
            .catch(function(error) {
                // Handle error
                alert('Error: ' + error.response.data);
            });
        });
    </script>
</body>
</html>


